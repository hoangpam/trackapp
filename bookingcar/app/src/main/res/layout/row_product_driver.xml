<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namecarTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Thùng xe mui bạt"
                android:textColor="@color/green"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/stateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_rect06"
                android:padding="5dp"
                android:text="Đang chờ phê duyệt"
                android:textColor="@color/Red" />

            <TextView
                android:id="@+id/license_plateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namecarTv"
                android:padding="5dp"
                android:text="49A-123456"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/weightTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/license_plateTv"
                android:padding="5dp"
                android:text="2.5 tấn/3.5m x 1.67m x 1.87 m"
                android:textColor="@color/gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/weightTv"
                android:layout_marginTop="4dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weightTv"
                android:layout_alignParentEnd="true"
                android:padding="5dp">

                <Button
                    android:id="@+id/dropBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Red"
                    android:padding="1dp"
                    android:text="xoá"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/originalPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/dropBtn"
                    android:backgroundTint="@color/green"
                    android:padding="5dp"
                    android:text="Cập nhật"
                    android:textColor="@color/gray" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>