<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/fragment_taikhoan"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/toolbarRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect02"
                    android:padding="10dp">

                    <RelativeLayout
                        android:id="@+id/ll_dieukhien"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/nameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quang Chánh Công"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/statusTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/nameTv"
                            android:background="@drawable/shape_rect06"
                            android:text="Bị từ chối"
                            android:textColor="@color/black"
                            android:textSize="10dp" />


                        <TextView

                            android:id="@+id/collectTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:text="Thu nhập"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/numberTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/collectTv"
                            android:layout_alignParentEnd="true"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20dp" />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/toolbar1Rl"
                    android:layout_width="380dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/shape_rect04"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/nameDDTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="CUSTOMERXU"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/numberDDTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nameDDTv"
                        android:layout_alignParentEnd="true"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </RelativeLayout>
                <TextView
                    android:id="@+id/TTTv"
                    android:layout_below="@+id/toolbar1Rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liên kết"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <RelativeLayout
                    android:id="@+id/toolbar2Rl"
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TTTv"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_states"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border"
                        android:backgroundTint="@color/white">

                        <TextView
                            android:id="@+id/TToanTv"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="5"
                            android:background="@drawable/bg_border"
                            android:drawableStart="@drawable/ic_atm"
                            android:drawableEnd="@drawable/ic_next_gray"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="textPersonName|textCapWords"
                            android:paddingLeft="10dp"
                            android:text="      Thanh toán"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_below="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/white">

                        <TextView
                            android:id="@+id/share"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="5"
                            android:background="@drawable/bg_border"
                            android:drawableStart="@drawable/ic_share"
                            android:drawableEnd="@drawable/ic_next_gray"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="textPersonName|textCapWords"
                            android:paddingLeft="10dp"
                            android:text="      Chia sẻ Driver Car"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll3"
                        android:layout_below="@+id/ll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/white">

                        <TextView
                            android:id="@+id/support"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="5"
                            android:background="@drawable/bg_border"
                            android:drawableStart="@drawable/ic_support"
                            android:drawableEnd="@drawable/ic_next_gray"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="textPersonName|textCapWords"
                            android:paddingLeft="10dp"
                            android:text="      Hỗ trợ"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll4"
                        android:layout_below="@+id/ll3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_border"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/white">

                        <TextView
                            android:id="@+id/policyterms"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="5"
                            android:background="@drawable/bg_border"
                            android:drawableStart="@drawable/ic_terms_and_conditions"
                            android:drawableEnd="@drawable/ic_next_gray"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="textPersonName|textCapWords"
                            android:paddingLeft="10dp"
                            android:text="      Điều khoản và Chính sách"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/logoutBtn"
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/toolbar2Rl"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="@color/Red"
                    android:drawableEnd="@drawable/log_out"
                    android:text="Đăng xuất"
                    android:textSize="20dp" />
            </RelativeLayout>

        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>