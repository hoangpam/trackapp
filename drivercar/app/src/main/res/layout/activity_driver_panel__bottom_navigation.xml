<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomnavigation.DriverPanel_BottomNavigation">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_container"
        android:layout_marginTop="80dp"
       />
    <!-- android:layout_above="@id/chef_bottom_navigation"-->
    <!--Toolbar-->
    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect02"
        android:padding="10dp"
        app:layout_anchor="@+id/frame_container"
        app:layout_anchorGravity="start|top">


        <ImageButton
            android:id="@+id/logoutBTN"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/log_out" />


        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/profileIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/img_avartar"
            app:c_border="true"
            app:c_border_color="@color/white" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileIv"
            android:gravity="center"
            android:text="Nguyễn Văn A"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />


        <!--Tabs Products, Order -->
        <LinearLayout
            android:id="@+id/ll_dieukhien"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/profileIv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_rect03"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabProductsTv"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_rect04"
                android:gravity="center"
                android:text="Đơn hàng"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tabOrderTv"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Của tôi"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_view"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        android:backgroundTint="@color/white"
        app:itemTextColor="@android:color/black"
        app:menu="@menu/driver_bottom_navigation"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>