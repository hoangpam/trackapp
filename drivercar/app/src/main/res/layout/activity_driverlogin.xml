        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/shape_rect01"
                android:padding="10sp">

                <ImageButton
                    android:id="@+id/backBN"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/ic_back"
                    android:background="@null"></ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="Đăng nhập"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white">

                </TextView>

            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_circle01"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_key"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Lemail"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawablePadding="10dp"
                    android:importantForAutofill="noExcludeDescendants"
                    android:hint="Email id"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Lpassword"
                android:layout_marginTop="11dp"
                android:paddingBottom="5dp"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:importantForAutofill="noExcludeDescendants"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/forgotpass"
                android:text="Bạn đã quên mật khẩu?"
                android:gravity="end"
                android:textSize="16sp"
                android:textColor="#090909"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/button4"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_login"
                android:drawableRight="@drawable/ic_login"
                android:background="@drawable/button_shape"
                android:text="Đăng Nhập"
                android:textSize="18sp"
                android:textColor="#FFFF"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_gravity="center"
                android:text="Bạn không có tài khoản??Hãy tạo tài khoản nhé"
                android:layout_marginTop="10dp"
                android:textColor="#090909"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TableRow
                    android:id="@+id/hr"
                    android:layout_width="140dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#090909"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/OR"
                    android:text="OR"
                    android:drawableLeft="@drawable/ic_sort"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="#090909"/>
                <TableRow
                    android:id="@+id/dr"
                    android:layout_width="140dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#090909"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signphone"
                android:text="Đăng nhập với"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="11dp"
                android:textColor="#090909"
                android:textSize="18sp"/>
            <Button
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:id="@+id/btnphone"
                android:layout_gravity="center"
                android:background="@drawable/btnblueish"
                android:text="Phone"
                android:layout_marginTop="13dp"
                android:drawableLeft="@drawable/ic_phone"
                android:padding="10dp"
                android:textColor="#FFFF"/>
        </LinearLayout>

<!--        </LinearLayout>-->
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>